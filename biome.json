{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!**/*.d.ts", "!**/*.css"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "linter": {
    "domains": {
      "next": "recommended",
      "react": "recommended"
    },
    "enabled": true,
    "rules": {
      "a11y": {
        "recommended": false
      },
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "root": true,
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "dev",
    "enabled": true,
    "useIgnoreFile": true
  }
}
